        <label>Recycling centre address </label><br />
        @Html.DropDownList("PkPoint_ID", (IEnumerable<SelectListItem>)ViewBag.PkPoint_ID, "Select PickupPoint", htmlAttributes: new { @class = "btn dropdown-toggle;required", @style = "border-radius:20px;" })

    </div>>

